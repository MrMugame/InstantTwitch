{
    "name": "InstantTwitch",
    "description": "Get updates on all your streamers and games on Twitch",
    "version": "0.2.2",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["assets/background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mr.mugame@gmail.com",
            "strict_min_version": "42.0"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    }
  }