{
    "name": "InstantTwitch",
    "description": "Get updates on all your streamers and games on Twitch",
    "version": "0.5.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage",
        "alarms",
        "notifications"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
          },
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "assets/background.js"
    },
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    }
  }